<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- Аппендер для вывода в консоль -->
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <!-- Упрощенный формат для тестов -->
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} -- %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Корневой логгер (уровень WARN для тестов) -->
    <root level="WARN">
        <appender-ref ref="STDOUT" />
    </root>

    <!-- Логгер для наших тестов (уровень INFO) -->
    <logger name="com.example.auditor" level="INFO" />

    <!-- Отключаем логи для зависимостей в тестах -->
    <logger name="org.junit" level="WARN" />
    <logger name="org.mockito" level="WARN" />
</configuration>